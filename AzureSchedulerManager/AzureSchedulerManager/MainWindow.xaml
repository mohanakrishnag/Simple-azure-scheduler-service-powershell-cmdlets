<Window x:Class="AzureSchedulerManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Azure Scheduler Mananger" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0" Height="Auto">
            <TextBlock x:Name="tbpublishSettings" Text="Publish Settings File:" Height="25" Width="Auto" Margin="5"/>
            <TextBox x:Name="txtpublishSettingsPath" Height="25" Width="200" Margin="5"/>
            <Button x:Name="btnBrowseSettings" Content="Browse" Height="25" Width="75" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
